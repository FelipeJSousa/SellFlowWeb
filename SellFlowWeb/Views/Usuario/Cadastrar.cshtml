@model Models.PessoaModel

@{
    ViewData["Title"] = "Cadastrar";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<h1>Cadastro</h1>

<hr />
<div class="row">
    <div class="col">
        <form asp-action="Salvar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group m-3">
                <label asp-for="nome" class="control-label"></label>
                <input asp-for="nome" class="form-control" />
                <span asp-validation-for="nome" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="sobrenome" class="control-label"></label>
                <input asp-for="sobrenome" class="form-control" />
                <span asp-validation-for="sobrenome" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="cpf" class="control-label"></label>
                <input asp-for="cpf" class="form-control" />
                <span asp-validation-for="cpf" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="dataNascimento" class="control-label"></label>
                <input asp-for="dataNascimento" type="date" class="form-control" />
                <span asp-validation-for="dataNascimento" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="usuarioObj.email" class="control-label"></label>
                <input asp-for="usuarioObj.email" type="email" class="form-control" />
                <span asp-validation-for="usuarioObj.email" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="usuarioObj.senha" class="control-label"></label>
                <input asp-for="usuarioObj.senha" type="password" class="form-control" />
                <span asp-validation-for="usuarioObj.senha" class="text-danger"></span>
            </div>
            <div class="row row-cols-auto">
                <span>@TempData["message"]</span>
            </div>
            <div class="form-group m-2">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-controller="Login" asp-action="Index" class="btn btn-outline-secondary">Fazer Login</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {

}
